
<div class="container ">
  <div class="cards">
    <% @actors.each do |actor| %>
      <%= link_to(actor_path(actor)) do %>
        <div class="card-trip">
           <%if actor.photo.attached? %>
            <%=cl_image_tag actor.photo.key, height: 300, width: 400, crop: :fill, class: "profile_show" %>
            <% else %>
            <%= image_tag @actor.photo.key, height: 300, width: 400, class: "profile_show" %>
            <% end %>
          <div class="card-trip-infos">
            <div>
              <h2><%= actor.username %></h2>
              <p><%= actor.description %></p>
              <h2 class="card-trip-pricing"><%= actor.price %>â‚¬</h2>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
