<div class="modal fade" id="bookingModal" tabindex="-1" aria-labelledby="bookingModalLabel" aria-hidden="true">
  <div class="form-container-2">
    <div class="row">
      <div class="col">
        <div class="modal-dialog">
          <div class="modal-content">
            <h2>Contacter <%= @actor.username%></h2>
            <%= simple_form_for [actor, booking] do |f| %>
            <%= f.input :start_date, as: :date, html5: true, label: "Date de début"%>
            <%= f.input :end_date, as: :date, html5: true, label: "Date de fin" %>
            <%= f.input :category, label: "Décrivez votre demande"%>
            <%= f.submit "Envoyer", class: "btn btn-ghost-3" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
